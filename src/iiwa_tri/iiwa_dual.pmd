group "2.1.iiwa-drivers" {
    cmd "0.kuka-driver" {
        exec = "kuka_driver --num_robots 2";
        host = "localhost";
    }
}

group "1.vision-sim" {
    cmd "0.optitrack-sim" {
        exec = "python $SPARTAN_SOURCE_DIR/src/iiwa_tri/optitrack_sim_publisher.py";
        host = "localhost";
    }
}

group "2.1.iiwa-sim" {
    cmd "0.kuka-sim" {
        exec = "$SPARTAN_BUILD_DIR/drake/drake/examples/kuka_iiwa_arm/kuka_simulation --urdf $SPARTAN_SOURCE_DIR/drake/drake/manipulation/models/iiwa_description/urdf/dual_iiwa14_polytope_collision.urdf";
        host = "localhost";
    }
}

