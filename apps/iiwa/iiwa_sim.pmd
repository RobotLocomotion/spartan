group "0.sim" {

  cmd "0.kuka_simulation" {
    exec = "$SPARTAN_SOURCE_DIR/drake/bazel-bin/drake/examples/kuka_iiwa_arm/kuka_simulation";
    host = "localhost";
  }

  cmd "1.kuka_simulation_w_schunk_gripper" {
    exec = "$SPARTAN_SOURCE_DIR/drake/bazel-bin/drake/examples/kuka_iiwa_arm/iiwa_wsg_simulation";
    host = "localhost";
  }

  cmd "2.plan-runner" {
    exec = "$SPARTAN_SOURCE_DIR/drake/bazel-bin/drake/examples/kuka_iiwa_arm/kuka_plan_runner";
    host = "localhost";
  }

  cmd "3.state-translator" {
    exec = "directorPython $SPARTAN_SOURCE_DIR/apps/iiwa/kuka_iiwa_state_translator.py --useIiwaStateEst";
    host = "localhost";
  }
}

group "1.tools"{
  
  cmd "0.director" {
    exec = "kuka-iiwa-app";
    host = "localhost";
  }

  cmd "1.drake-lcm-spy" {
    exec = "drake-lcm-spy";
    host = "localhost";
  }

}




